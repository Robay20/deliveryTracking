<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gradiantbackground"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"

        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="379dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="375dp"
            android:autofillHints="Your username"
            android:background="@drawable/txtfieldstyle"
            android:ems="10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#001D2F"
            android:textColorHint="#001D2F" />

        <!-- EditText for Password -->
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autofillHints="Your password"
            android:background="@drawable/txtfieldstyle"
            android:ems="10"
            android:hint="Password"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#001D2F"
            android:textColorHint="#001D2F" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#001D2F"
            android:shadowDx="12.0"
            android:shadowDy="12.0"
            android:shadowRadius="12.0"
            android:layout_marginTop="38dp"
            android:background="@drawable/buttonlogin"
            android:onClick="attemptLogin"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"

            android:text="@string/log_in"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>
